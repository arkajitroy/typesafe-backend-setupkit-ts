{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "src/types/declarations"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
